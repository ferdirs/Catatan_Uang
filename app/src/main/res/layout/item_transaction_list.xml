<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginBottom="8dp"
    android:paddingVertical="8dp"
    android:paddingHorizontal="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_img_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="62dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_nominal_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="244dp" />
    <ImageView
        android:id="@+id/img"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_sample_human"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guide_img_left"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/input_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Sutres McKenzyy"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/guide_img_left"
        app:layout_constraintRight_toRightOf="@+id/guide_nominal_right"/>
    <TextView
        android:id="@+id/input_note"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:text="Top Up Tetris"
        app:layout_constraintTop_toBottomOf="@+id/input_name"
        app:layout_constraintLeft_toLeftOf="@id/guide_img_left"
        app:layout_constraintRight_toRightOf="@+id/guide_nominal_right"/>

    <TextView
        android:id="@+id/input_nominal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="- Rp. 500.000"
        android:textColor="@color/red"
        android:gravity="right"
        app:layout_constraintTop_toTopOf="@+id/input_name"
        app:layout_constraintBottom_toBottomOf="@+id/input_note"
        app:layout_constraintLeft_toRightOf="@+id/guide_nominal_right"
        app:layout_constraintRight_toRightOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>